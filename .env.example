# Database Configuration
# Use the same database as your main reading platform
DATABASE_URL=postgresql://username:password@localhost:5432/reading_platform

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120

# Processing Configuration
DEFAULT_READING_LEVEL=intermediate
DEFAULT_AGE_RANGE=8-12
DEFAULT_GENRE=fiction

# Chapter Splitting Configuration
MAX_CHAPTER_WORDS_BEGINNER=800
MAX_CHAPTER_WORDS_INTERMEDIATE=1500
MAX_CHAPTER_WORDS_ADVANCED=2500
MIN_CHAPTER_WORDS=200

# Question Generation Configuration
QUESTIONS_PER_CHAPTER=3
MIN_ANSWER_WORDS=20
MAX_ANSWER_WORDS=200

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=processing.log

# Project Gutenberg Configuration
GUTENBERG_MIRROR=https://www.gutenberg.org
DOWNLOAD_TIMEOUT=60

# Processing Options
PRESERVE_FORMATTING=false
EXTRACT_VOCABULARY=true
CALCULATE_READING_TIME=true
READING_SPEED_WPM=200